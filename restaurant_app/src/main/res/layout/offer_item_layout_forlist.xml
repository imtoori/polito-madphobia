<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_dish_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/menuItemImage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fitsSystemWindows="true"
        android:src="@drawable/ic_star"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_offer_products"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="16dp"
        android:textSize="@dimen/description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_offer_price_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_offer_price_title" />

    <TextView
        android:id="@+id/tv_offer_price_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/price"
        android:textStyle="bold"
        android:textSize="@dimen/description"
        app:layout_constraintStart_toEndOf="@+id/menuItemImage"
        app:layout_constraintTop_toTopOf="@+id/menuItemImage" />

    <TextView
        android:id="@+id/tv_offer_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/price"
        android:textSize="@dimen/description"
        app:layout_constraintBottom_toBottomOf="@+id/tv_offer_price_title"
        app:layout_constraintStart_toEndOf="@+id/tv_offer_price_title"
        app:layout_constraintTop_toTopOf="@+id/tv_offer_price_title" />



    <TextView
        android:id="@+id/tv_offer_expiringdate_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Expiring Date:"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_offer_price"
        app:layout_constraintStart_toEndOf="@+id/tv_offer_price"
        app:layout_constraintTop_toTopOf="@+id/tv_offer_price"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_offer_expiringdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv_offer_expiringdate_title"
        app:layout_constraintStart_toEndOf="@+id/tv_offer_expiringdate_title"
        app:layout_constraintTop_toTopOf="@+id/tv_offer_expiringdate_title" />

    <ImageButton
        android:id="@+id/tv_remove_offer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_gradient"
        android:src="@drawable/ic_minus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
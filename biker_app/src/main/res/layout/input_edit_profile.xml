<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="@string/persona_data"
                android:textSize="@dimen/subtitle"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/editprofile_userimage"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_gradient"
                android:contentDescription="@string/photo_toolbar"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:srcCompat="@drawable/ic_user" />

            <EditText
                android:id="@+id/editprofile_name"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:autofillHints="@string/name"
                android:gravity="center_vertical"
                android:hint="@string/name"
                android:inputType="textPersonName"
                android:maxLength="46"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textColor="@color/colorText"
                android:textSize="@dimen/normalText"
                app:layout_constraintBottom_toBottomOf="@+id/editprofile_userimage"
                app:layout_constraintStart_toEndOf="@+id/editprofile_userimage"
                app:layout_constraintTop_toTopOf="@+id/editprofile_userimage"
                card_view:layout_constraintEnd_toEndOf="parent" />

            <EditText
                android:id="@+id/editprofile_lastname"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:autofillHints="@string/lastname"
                android:gravity="center_vertical"
                android:hint="@string/lastname"
                android:inputType="textPersonName"
                android:maxLength="46"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textColor="@color/colorText"
                android:textSize="@dimen/normalText"
                app:layout_constraintEnd_toEndOf="@+id/editprofile_name"
                app:layout_constraintStart_toStartOf="@+id/editprofile_name"
                app:layout_constraintTop_toBottomOf="@+id/editprofile_name" />

            <ImageView
                android:id="@+id/editprofile_phone_image"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/rounded_gradient"
                android:contentDescription="@string/phone_number"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                app:layout_constraintTop_toBottomOf="@+id/editprofile_lastname"
                app:srcCompat="@drawable/ic_phone"
                card_view:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/editprofile_phone"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:autofillHints="@string/phone_number"
                android:gravity="center_vertical"
                android:hint="@string/default_phone"
                android:inputType="phone"
                android:maxLength="20"
                android:textColor="@color/colorText"
                android:textSize="@dimen/normalText"
                app:layout_constraintBottom_toBottomOf="@+id/editprofile_phone_image"
                app:layout_constraintEnd_toEndOf="@+id/editprofile_name"
                app:layout_constraintStart_toStartOf="@+id/editprofile_name"
                app:layout_constraintTop_toTopOf="@+id/editprofile_phone_image" />


            <ImageView
                android:id="@+id/editprofile_email_image"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_gradient"
                android:contentDescription="@string/email"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editprofile_phone_image"
                app:srcCompat="@drawable/ic_email" />

            <EditText
                android:id="@+id/editprofile_email"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:autofillHints="@string/email"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:maxLength="45"
                android:textColor="@color/colorText"
                android:textSize="@dimen/normalText"
                app:layout_constraintBottom_toBottomOf="@+id/editprofile_email_image"
                app:layout_constraintEnd_toEndOf="@+id/editprofile_phone"
                app:layout_constraintStart_toStartOf="@+id/editprofile_phone"
                app:layout_constraintTop_toTopOf="@+id/editprofile_email_image" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="@string/description"

                android:textSize="@dimen/subtitle"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/editprofile_description_image"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:background="@drawable/rounded_gradient"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/description"
                app:srcCompat="@drawable/ic_description"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/textView3" />

            <EditText
                android:id="@+id/editprofile_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                android:autofillHints="@string/description"
                android:gravity="center_vertical"
                android:hint="@string/description"
                android:inputType="textMultiLine|textImeMultiLine|textLongMessage"
                android:textColor="@color/colorText"
                android:textSize="@dimen/normalText"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0.51"
                card_view:layout_constraintStart_toEndOf="@+id/editprofile_description_image"
                card_view:layout_constraintTop_toBottomOf="@+id/textView3" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
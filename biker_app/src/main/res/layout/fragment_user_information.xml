<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            card_view:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            card_view:cardUseCompatPadding="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/personal_data_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/customer"
                    android:textSize="@dimen/subtitle"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/main_user_image"
                    android:layout_width="35dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rounded_gradient"
                    android:contentDescription="@string/photo_toolbar"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/personal_data_tv"
                    app:srcCompat="@drawable/ic_user" />

                <TextView
                    android:id="@+id/main_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp"
                    android:hint="@string/name"
                    android:maxLength="46"
                    android:padding="8dp"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/normalText"
                    app:layout_constraintBottom_toBottomOf="@+id/main_user_image"
                    app:layout_constraintStart_toEndOf="@+id/main_user_image"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintTop_toTopOf="@+id/main_user_image" />

                <ImageView
                    android:id="@+id/main_phone_image"
                    android:layout_width="35dp"
                    android:layout_height="40dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/rounded_gradient"
                    android:contentDescription="@string/phone_number"
                    app:srcCompat="@drawable/ic_phone"
                    card_view:layout_constraintStart_toStartOf="@+id/main_user_image"
                    card_view:layout_constraintTop_toBottomOf="@+id/main_user_image" />


                <ImageView
                    android:id="@+id/main_email_image"
                    android:layout_width="35dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_gradient"
                    android:contentDescription="@string/email"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    app:srcCompat="@drawable/ic_email"
                    card_view:layout_constraintStart_toStartOf="@+id/main_phone_image"
                    card_view:layout_constraintTop_toBottomOf="@+id/main_phone_image" />

                <TextView
                    android:id="@+id/main_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:hint="@string/email"
                    android:maxLength="45"
                    android:padding="8dp"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/normalText"
                    card_view:layout_constraintBottom_toBottomOf="@+id/main_email_image"
                    card_view:layout_constraintEnd_toEndOf="@+id/mainprofile_phone"
                    card_view:layout_constraintStart_toStartOf="@+id/mainprofile_phone"
                    card_view:layout_constraintTop_toTopOf="@+id/main_email_image" />

                <TextView
                    android:id="@+id/mainprofile_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/default_phone"
                    android:padding="8dp"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/normalText"
                    card_view:layout_constraintBottom_toBottomOf="@+id/main_phone_image"
                    card_view:layout_constraintEnd_toEndOf="@+id/main_name"
                    card_view:layout_constraintStart_toStartOf="@+id/main_name"
                    card_view:layout_constraintTop_toTopOf="@+id/main_phone_image" />

                <ImageView
                    android:id="@+id/main_location_image"
                    android:layout_width="35dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_gradient"
                    android:contentDescription="@string/delivery_desc"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:tint="@color/colorWhite"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:srcCompat="@drawable/ic_location"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@+id/main_email_image" />

                <TextView
                    android:id="@+id/main_road"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp"
                    android:ellipsize="end"
                    android:hint="@string/delivery"
                    android:maxLength="150"
                    android:maxLines="3"
                    android:padding="8dp"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/normalText"
                    app:layout_constraintBottom_toBottomOf="@+id/main_location_image"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintStart_toEndOf="@+id/main_location_image"
                    card_view:layout_constraintTop_toTopOf="@+id/main_location_image" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/restaurantcardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            card_view:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            card_view:cardUseCompatPadding="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/restaurant_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/restaurant"
                    android:textSize="@dimen/subtitle"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/main_restaurant_image"
                    android:layout_width="35dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rounded_gradient"
                    android:contentDescription="@string/photo_toolbar"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/restaurant_title"
                    app:srcCompat="@drawable/ic_user" />

                <TextView
                    android:id="@+id/restaurant_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp"
                    android:hint="@string/name"
                    android:maxLength="46"
                    android:padding="8dp"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/normalText"
                    app:layout_constraintBottom_toBottomOf="@+id/main_restaurant_image"
                    app:layout_constraintStart_toEndOf="@+id/main_restaurant_image"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintTop_toTopOf="@+id/main_restaurant_image" />

                <ImageView
                    android:id="@+id/restaurant_phone_image"
                    android:layout_width="35dp"
                    android:layout_height="40dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/rounded_gradient"
                    android:contentDescription="@string/phone_number"
                    app:srcCompat="@drawable/ic_phone"
                    card_view:layout_constraintStart_toStartOf="@+id/main_restaurant_image"
                    card_view:layout_constraintTop_toBottomOf="@+id/main_restaurant_image" />


                <ImageView
                    android:id="@+id/restaurant_email_image"
                    android:layout_width="35dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_gradient"
                    android:contentDescription="@string/email"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    app:srcCompat="@drawable/ic_email"
                    card_view:layout_constraintStart_toStartOf="@+id/restaurant_phone_image"
                    card_view:layout_constraintTop_toBottomOf="@+id/restaurant_phone_image" />

                <TextView
                    android:id="@+id/restaurant_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:hint="@string/email"
                    android:maxLength="45"
                    android:padding="8dp"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/normalText"
                    card_view:layout_constraintBottom_toBottomOf="@+id/restaurant_email_image"
                    card_view:layout_constraintEnd_toEndOf="@+id/restaurantprofile_phone"
                    card_view:layout_constraintStart_toStartOf="@+id/restaurantprofile_phone"
                    card_view:layout_constraintTop_toTopOf="@+id/restaurant_email_image" />

                <TextView
                    android:id="@+id/restaurantprofile_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/default_phone"
                    android:padding="8dp"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/normalText"
                    card_view:layout_constraintBottom_toBottomOf="@+id/restaurant_phone_image"
                    card_view:layout_constraintEnd_toEndOf="@+id/restaurant_name"
                    card_view:layout_constraintStart_toStartOf="@+id/restaurant_name"
                    card_view:layout_constraintTop_toTopOf="@+id/restaurant_phone_image" />

                <ImageView
                    android:id="@+id/restaurant_location_image"
                    android:layout_width="35dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_gradient"
                    android:contentDescription="@string/delivery_desc"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:tint="@color/colorWhite"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:srcCompat="@drawable/ic_location"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@+id/restaurant_email_image" />

                <TextView
                    android:id="@+id/restaurant_road"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:ellipsize="end"
                    android:hint="@string/delivery"
                    android:maxLength="150"
                    android:maxLines="3"
                    android:padding="8dp"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/normalText"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintStart_toEndOf="@+id/restaurant_location_image"
                    card_view:layout_constraintTop_toTopOf="@+id/restaurant_location_image" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>

<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            card_view:cardElevation="2dp"
            app:cardCornerRadius="8dp"
            card_view:cardUseCompatPadding="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/personal_data_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/restaurant_info"
                    android:textSize="@dimen/subtitle"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/main_user_image"
                    android:layout_width="35dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rounded_gradient"
                    android:contentDescription="@string/photo_toolbar"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/personal_data_tv"
                    app:srcCompat="@drawable/ic_location" />

                <TextView
                    android:id="@+id/rest_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp"
                    android:hint="@string/restaurant_address"
                    android:maxLength="46"
                    android:padding="8dp"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/normalText"
                    app:layout_constraintBottom_toBottomOf="@+id/main_user_image"
                    app:layout_constraintStart_toEndOf="@+id/main_user_image"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintTop_toTopOf="@+id/main_user_image" />

                <ImageView
                    android:id="@+id/main_phone_image"
                    android:layout_width="35dp"
                    android:layout_height="40dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/rounded_gradient"
                    android:contentDescription="@string/phone_number"
                    app:srcCompat="@drawable/ic_phone"
                    card_view:layout_constraintStart_toStartOf="@+id/main_user_image"
                    card_view:layout_constraintTop_toBottomOf="@+id/main_user_image" />


                <ImageView
                    android:id="@+id/main_email_image"
                    android:layout_width="35dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_gradient"
                    android:contentDescription="@string/email"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    app:srcCompat="@drawable/ic_email"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintStart_toStartOf="@+id/main_phone_image"
                    card_view:layout_constraintTop_toBottomOf="@+id/main_phone_image" />

                <TextView
                    android:id="@+id/main_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:hint="@string/email"
                    android:maxLength="45"
                    android:padding="8dp"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/normalText"
                    card_view:layout_constraintBottom_toBottomOf="@+id/main_email_image"
                    card_view:layout_constraintEnd_toEndOf="@+id/mainprofile_phone"
                    card_view:layout_constraintStart_toStartOf="@+id/mainprofile_phone"
                    card_view:layout_constraintTop_toTopOf="@+id/main_email_image" />

                <TextView
                    android:id="@+id/mainprofile_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/default_phone"
                    android:padding="8dp"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/normalText"
                    card_view:layout_constraintBottom_toBottomOf="@+id/main_phone_image"
                    card_view:layout_constraintEnd_toEndOf="@+id/rest_address"
                    card_view:layout_constraintStart_toStartOf="@+id/rest_address"
                    card_view:layout_constraintTop_toTopOf="@+id/main_phone_image" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            card_view:cardElevation="2dp"
            app:cardCornerRadius="8dp"
            card_view:cardUseCompatPadding="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/rest_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/description"
                    android:textSize="@dimen/subtitle"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/rest_description_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/description"
                    android:textSize="@dimen/normalText"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rest_description" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            card_view:cardElevation="2dp"
            app:cardCornerRadius="8dp"
            card_view:cardUseCompatPadding="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/rest_opening"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/opening_hours"
                    android:textSize="@dimen/subtitle"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/rest_opening_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/opening_hours"
                    android:textSize="@dimen/normalText"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rest_opening" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="2dp"
            android:focusable="true"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            card_view:cardUseCompatPadding="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            app:cardCornerRadius="8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/reviews"
                    android:textSize="@dimen/subtitle"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <RatingBar
                    android:id="@+id/rateRestaurant"
                    style="?android:attr/ratingBarStyleIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:numStars="5"
                    android:progressBackgroundTint="@color/colorPrimaryDark"
                    android:progressTint="@color/colorPrimary"
                    android:rating="3.0"
                    android:stepSize="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/reviews" />

                <TextView
                    android:id="@+id/tv_rating_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:textSize="@dimen/normalText"
                    app:layout_constraintBottom_toBottomOf="@+id/rateRestaurant"
                    app:layout_constraintStart_toEndOf="@+id/rateRestaurant"
                    app:layout_constraintTop_toTopOf="@+id/rateRestaurant" />

                <TextView
                    android:id="@+id/tv_rev_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:text="Tap to see all reviews"
                    android:textStyle="italic"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rateRestaurant" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".search.SearchFragment">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            card_view:cardElevation="4dp"
            card_view:cardUseCompatPadding="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusableInTouchMode="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/fragmentName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/choose_restaurant"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/bigTitle"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/delivery_address_et"
                    style="@style/Widget.AppCompat.EditText"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/edit_text_border"
                    android:hint="@string/location_hint"
                    android:paddingStart="16dp"
                    android:paddingEnd="40dp"
                    android:textSize="@dimen/description"
                    android:textStyle="italic"
                    android:textColor="@color/colorDivider"
                    android:focusedByDefault="false"

                    app:layout_constraintBottom_toBottomOf="@+id/search_imgbtn"
                    app:layout_constraintEnd_toStartOf="@+id/search_imgbtn"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/search_imgbtn" />

                <ImageButton
                    android:id="@+id/location_img"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@null"
                    android:src="@drawable/ic_myloc"
                    app:layout_constraintBottom_toBottomOf="@+id/delivery_address_et"
                    app:layout_constraintEnd_toStartOf="@+id/search_imgbtn"
                    app:layout_constraintTop_toTopOf="@+id/delivery_address_et" />


                <ImageButton
                    android:id="@+id/search_imgbtn"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/gradient"
                    android:elevation="4dp"
                    android:src="@drawable/ic_search"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fragmentName" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_filters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:cardCornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_search"
            card_view:cardElevation="4dp"
            card_view:cardUseCompatPadding="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/filtertv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/filters"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/subtitle"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <com.google.android.material.chip.Chip
                    android:id="@+id/minorderchip"
                    style="@style/Theme.MaterialComponents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="@string/no_min_order"
                    android:textColor="@color/colorPrimaryDark"
                    app:checkedIconEnabled="false"
                    app:chipBackgroundColor="@color/colorWhite"
                    app:chipIcon="@drawable/ic_order"
                    app:chipIconTint="@color/colorPrimary"
                    app:chipStrokeColor="@color/colorPrimaryDark"
                    app:chipStrokeWidth="0.1dp"
                    app:layout_constraintBottom_toBottomOf="@+id/deliverychip"
                    app:layout_constraintStart_toEndOf="@+id/deliverychip"
                    app:layout_constraintTop_toTopOf="@+id/deliverychip"
                    app:rippleColor="@color/colorPrimaryDark" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/deliverychip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:checkable="true"
                    android:text="@string/free_delivery"
                    android:textColor="@color/colorPrimaryDark"
                    app:checkedIconEnabled="false"
                    app:chipBackgroundColor="@color/colorWhite"
                    app:chipIcon="@drawable/ic_money"
                    app:chipIconTint="@color/colorPrimaryDark"
                    app:chipStrokeColor="@color/colorPrimaryDark"
                    app:chipStrokeWidth="0.1dp"
                    app:layout_constraintStart_toStartOf="@+id/filtertv"
                    app:layout_constraintTop_toBottomOf="@+id/filtertv"
                    app:rippleColor="@color/colorPrimaryDark" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/order_review"
                    style="@style/Theme.MaterialComponents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="Sort by review"
                    android:textColor="@color/colorPrimaryDark"
                    app:checkedIconEnabled="false"
                    app:chipBackgroundColor="@color/colorWhite"
                    app:chipIcon="@drawable/ic_order"
                    app:chipIconTint="@color/colorPrimary"
                    app:chipStrokeColor="@color/colorPrimaryDark"
                    app:chipStrokeWidth="0.1dp"
                    app:layout_constraintBottom_toBottomOf="@+id/minorderchip"
                    app:layout_constraintStart_toEndOf="@+id/minorderchip"
                    app:layout_constraintTop_toTopOf="@+id/minorderchip"
                    app:rippleColor="@color/colorPrimaryDark" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/chip_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/deliverychip"
                    app:layout_constraintTop_toBottomOf="@+id/deliverychip" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <RelativeLayout
            android:id="@+id/childfrag_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv_filters" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
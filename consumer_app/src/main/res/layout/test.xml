<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/where_and_when_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        card_view:cardElevation="4dp"
        android:layout_margin="8dp"
        card_view:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/info"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/bigTitle"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_delivery"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_gradient"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
                app:srcCompat="@drawable/ic_location" />

            <AutoCompleteTextView
                android:id="@+id/actv_delivery_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:hint="@string/delivery"
                android:inputType="textPostalAddress"
                app:layout_constraintBottom_toBottomOf="@+id/img_delivery"
                app:layout_constraintEnd_toStartOf="@+id/imageView_get_location"
                app:layout_constraintStart_toEndOf="@+id/img_delivery"
                app:layout_constraintTop_toTopOf="@+id/img_delivery" />

            <ImageView
                android:id="@+id/imageView_get_location"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_location2"
                android:tint="@color/colorDivider"
                app:layout_constraintBottom_toBottomOf="@+id/actv_delivery_address"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/actv_delivery_address"
                app:layout_constraintVertical_bias="0.142" />

            <ImageView
                android:id="@+id/img_time_delivery"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_gradient"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_delivery"
                app:srcCompat="@drawable/ic_clock" />

            <EditText
                android:id="@+id/actv_time_delivery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:inputType="time"
                android:hint="@string/Delivery_time"
                app:layout_constraintBottom_toBottomOf="@+id/img_time_delivery"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/img_time_delivery"
                app:layout_constraintTop_toTopOf="@+id/img_time_delivery" />


            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/actv_time_delivery">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_cash"
                    style="@style/Theme.MaterialComponents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="@string/pay_credit"
                    android:textColor="@color/colorPrimary"
                    app:checkedIconEnabled="false"
                    app:chipBackgroundColor="@color/colorWhite"
                    app:chipIcon="@drawable/ic_order"
                    app:chipIconTint="@color/colorPrimary"
                    app:chipStrokeColor="@color/colorPrimary"
                    app:chipStrokeWidth="0.1dp"
                    app:rippleColor="@color/colorPrimaryDark" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_credit"
                    style="@style/Theme.MaterialComponents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="@string/pay_cash"
                    android:textColor="@color/colorPrimary"
                    app:checkedIconEnabled="false"
                    app:chipBackgroundColor="@color/colorWhite"
                    app:chipIcon="@drawable/ic_order"
                    app:chipIconTint="@color/colorPrimary"
                    app:chipStrokeColor="@color/colorPrimary"
                    app:chipStrokeWidth="0.1dp"
                    app:rippleColor="@color/colorPrimaryDark" />


            </com.google.android.material.chip.ChipGroup>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>